.row.row-offcanvas.row-offcanvas-right
  #sidebar.col-sm-3.sidebar-offcanvas{:role => "navigation"}
    .row
      .list-group
        .list-group-item{style: "text-align: center;"}
          %a.btn.btn-primary{:href => "/campaigns/new"} 创建Campaign
        .list-group-item
          campaign
          %span.badge= @user.campaign.count
        .list-group-item
          api呼叫 
          %span.badge= @user.entities.count


  .col-sm-9
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th 名称
          %th 描述
          %th 字段数
          %th 记录数 
          %th 明细
          %th 编辑
      %tbody
        - @campaigns.each do |campaign|
          %tr.campaign{id: "campaign_#{campaign.id}" }
            %td= campaign.name 
            %td= campaign.desc
            %td=campaign.colnum
            %td
              %a{href: "/campaigns/#{campaign.id}/entities", class: "badge", "data-toggle" => "tooltip", "data-original-title" => "api呼叫次数"}
                =campaign.entity.count.to_s
            %td
              %a{href: "/campaigns?id=#{campaign.id}", "data-toggle" => "tooltip", "data-original-title" => "查看[#{campaign.name}]明细"}
                %span.glyphicon.glyphicon-list-alt
            %td 
              %a{href: "/campaigns/#{campaign.id}/edit", "data-toggle" => "tooltip", "data-original-title" => "编辑[#{campaign.name}]"}
                %span.glyphicon.glyphicon-edit

